<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/top_bottom_line"
    android:layout_marginHorizontal="40dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/kcl_image_item"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/kcl_title_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="언양식 불고기"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="10dp"/>

    <TextView
        android:id="@+id/kcl_contents_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내용내용내용내용내용내용내용내용내용내용내
        용내용내용내용내용내용내용내용내용내용내용내용"
        android:textSize="18sp"
        android:layout_marginBottom="15dp"/>

</LinearLayout>