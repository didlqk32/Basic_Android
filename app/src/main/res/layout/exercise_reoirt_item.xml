<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="3dp">


    <TextView
        android:id="@+id/report_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="8dp"
        android:text="2020.07.06"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/report_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/report_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:text="사이드 크런치"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report_date" />

    <TextView
        android:id="@+id/report_level_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/report_title"
        app:layout_constraintBaseline_toBaselineOf="@+id/report_title"
        android:text="난이도 : "
        android:textSize="13sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/report_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="4dp"
        android:text="easy"
        android:textSize="13sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/report_title"
        app:layout_constraintLeft_toRightOf="@+id/report_level_text" />


</androidx.constraintlayout.widget.ConstraintLayout>