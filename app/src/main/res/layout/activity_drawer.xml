<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="#E0FDFA"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#46D3C3">

        <ImageView
            android:id="@+id/menubar_profile_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/profileimage"
            app:layout_constraintBottom_toTopOf="@+id/menubar_profile_nickname"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/menubar_profile_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="닉네임"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menubar_profile_image"
            app:layout_constraintVertical_chainStyle="packed" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/menubar_my_profile"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menubar_my_profile_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/user" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="내 프로필"
                android:textSize="17sp" />

        </LinearLayout>
        <!--        <LinearLayout-->
        <!--            android:id="@+id/menubar_hometraining"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="55dp"-->
        <!--            android:orientation="horizontal"-->
        <!--            android:gravity="center_vertical"-->
        <!--            android:clickable="true">-->

        <!--            <ImageView-->
        <!--                android:layout_width="35dp"-->
        <!--                android:layout_height="35dp"-->
        <!--                android:layout_marginLeft="20dp"-->
        <!--                android:layout_marginStart="20dp"-->
        <!--                android:background="@drawable/dumbbell_icon"/>-->

        <!--            <TextView-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_marginLeft="20dp"-->
        <!--                android:text="홈 트레이닝"-->
        <!--                android:textSize="17sp"/>-->

        <!--        </LinearLayout>-->
        <LinearLayout
            android:id="@+id/menubar_exercise_report"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/report" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="운동 기록"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menubar_information_of_calorie"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/food" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="칼로리 정보"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menubar_calculator_of_fat"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="40dp"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:background="@drawable/fat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:text="비만도 계산"
                android:textSize="17sp" />

        </LinearLayout>


        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="200dp"
            android:text="로그 아웃"
            android:textSize="20sp"
            android:background="#9FE3D5"/>


    </LinearLayout>

</LinearLayout>