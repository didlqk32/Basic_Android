<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/my_dmtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_gravity="right"
        android:text="오후 2시30분"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/my_dmtext"
        app:layout_constraintStart_toEndOf="@+id/my_dmtext" />

    <TextView
        android:id="@+id/my_dmtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/textbox2"
        android:gravity="end"
        android:maxWidth="260dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="7dp"
        android:text="보내는 메세지"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
